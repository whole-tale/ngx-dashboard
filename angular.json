{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "defaultCollection": "@ngrx/schematics",
    "packageManager": "yarn"
  },
  "projects": {
    "universal": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "prefix": "app",
      "schematics": {
        "@schematics/angular:module": {
          "skipTests": true
        },
        "@schematics/angular:component": {
          "style": "scss"
        },
        "@ngrx/schematics:component": {
          "styleext": "scss"
        },
        "@ngrx/schematics:container": {
          "styleext": "scss"
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-builders/custom-webpack:browser",
          "options": {
            "customWebpackConfig": {
              "path": "tools/build/webpack.config.js",
              "mergeStrategies": {
                "module": "append"
              }
            },
            "outputPath": "dist/browser",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.json",
            "assets": [
              {
                "glob": "favicon.ico",
                "input": "src",
                "output": "/"
              },
              "src/assets/img",
              "src/assets/data",
              "src/assets/i18n",
              "src/assets/config.local.json",
              "src/assets/env.template.js",
              "src/assets/env.js"
            ],
            "styles": [
              "src/assets/sass/lib.scss",
              "src/assets/sass/style.scss"
            ],
            "scripts": [
              "node_modules/jquery/dist/jquery.min.js",
              "node_modules/semantic-ui-css/semantic.min.js"
            ],
            "progress": true
          },
          "configurations": {
            "hmr": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.hmr.ts"
                }
              ]
            },
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true
            }
          }
        },
        "serve": {
          "builder": "@angular-builders/custom-webpack:dev-server",
          "options": {
            "browserTarget": "universal:build"
          },
          "configurations": {
            "hmr": {
              "hmr": true,
              "browserTarget": "universal:build:hmr"
            },
            "production": {
              "browserTarget": "universal:build:production"
            }
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "tsconfig.lint.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "universal"
}
